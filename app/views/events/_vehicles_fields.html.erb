<div class="block">
  <a href="#vehicle" class="block-heading" data-toggle="collapse">New vehicle</a>
  <div id="vehicle" class="block-body collapse in">
    <div class="control-group">
      <div class="control-group">

        <div class="field">
          <%= f.label :Marca %><br />
          <%= f.text_field :brand %>
        </div>
        <div class="field">
          <%= f.label :Linea %><br />
          <%= f.text_field :line %>
        </div>
        <div class="field">
          <%= f.label :Modelo %><br />
          <%= f.number_field :model %>
        </div>
        <div class="field">
          <%= f.label :Numero_de_Serie %><br />
          <%= f.text_field :serial_number %>
        </div>
        <div class="field">
          <%= f.label :Color %><br />
          <%= f.text_field :color %>
        </div>
        <div class="field">
          <%= f.label :Robado %><br />
          <%= f.check_box :stolen %>
        </div>
        <div class="field">
          <%= f.label :status %><br />
          <%= f.text_field :status %>
        </div>
        <div class="field">
          <%= f.label :Detalles %><br />
          <%= f.text_area :details %>
        </div>
        <div class="field">
          <%= f.label :person_id %><br />
          <%= f.collection_select(:person_id, Person.all, :id, :fullname, {:prompt => "seleccione persona"}) %>
        </div>
        <%=f.link_to_remove "Eliminar Vehiculo",:class => 'btn btn-danger'%>
      </div>
    </div>
  </div>
</div>