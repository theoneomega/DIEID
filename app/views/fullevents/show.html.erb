<%content_for :breadcrumb do%>
  <ul class="breadcrumb">
    <li><%=link_to t(:home), root_path %><span class="divider">/</span> </li>
    <li><%=link_to t(:wevents), events_path%><span class="divider">/</span></li>
    <li class="active"><%= @fullevent.id %></li>
  </ul>
<%end%>

<% if flash[:notice] %>
  <div class="alert alert-info"><button type="button" class="close" data-dismiss="alert">Ã—</button>
    <%= flash[:notice] %>
  <% end %>
  <% if flash[:error] %>
    <h3 class="error_box"><%= flash[:error] %></h3>
  <% end %>
</div>
<div class="block">
  <p class="block-heading"><i class="icon-eye-open"> </i><%= eval("t(:w" + controller_name + ")").singularize %> <%= @fullevent.id %></p>
  <div class="block-body">

    <p>
      <b>Prioridad:</b>
      <%= @fullevent.priority.description %>
    </p>

    <p>
      <b>Fecha de evento: </b>
      <%= @fullevent.event_date %>
    </p>

    <p>
      <b>Descripcion: </b>
      <%= @fullevent.description %>
    </p>

    <p>
      <b>Calle: </b>
      <%= @fullevent.street %>
    </p>

    <p>
      <b>Numero Interior: </b>
      <%= @fullevent.interior_number %>
    </p>

    <p>
      <b>Colonia: </b>
      <%= @fullevent.suburb %>
    </p>

    <p>
      <b>Localidad: </b>
      <%= @fullevent.locality %>
    </p>

    <p>
      <b>Observaciones: </b>
      <%= @fullevent.observations %>
    </p>

    <p>
      <b>Antecedentes: </b>
      <%= @fullevent.backup_file %>
    </p>

    <p>
      <b>Fuente: </b>
      <%= @fullevent.source %>
    </p>

    <p>
      <b>Analyst:</b>
      <%if @fullevent.analyst !=nil%>
        <%= @fullevent.analyst.analyst%>
      <%end%>
    </p>

    <p>
      <b>Area:</b>
      <%= @fullevent.area.description %>
    </p>

    <p>
      <b>Delito: </b>
      <%if @fullevent.crime !=nil%>
        <%= @fullevent.crime.crime %>
      <%end%>
    </p>

    <p>
      <b>Municipio: </b>
      <%if @fullevent.township !=nil%>
        <%= @fullevent.township.township %>
      <%end%>
    </p>

    <p>
      <b>Lugar: </b>
      <%if @fullevent.place !=nil%>
        <%= @fullevent.place.place %>
      <%end%>
    </p>

    <p>
      <b>Status:</b>
      <%if @fullevent.status%>
        <%= @fullevent.status.description %>
      <%end%>
    </p>
    <%#if @event.person.where(:status_id=>10001).count >0 %>
      <%#*<div class="block">%>
        <%#*<a href="#victims" class="block-heading" data-toggle="collapse"><%= pluralize(@fullevent.person.where(:status_id=>10001).count, "Victima") %></a>%>
        <%#*<div id="victims" class="block-body collapse">%>
          <%#*<div class="control-group">%>
            <%#@fullevent.person.where(:status_id => 10001).each do |person|%>
              <%#*<ul class="inline">%>
                <%#*<li><i class="icon-user"> </i> </i> <%=person.fullname %></li>%>
              <%#*</ul>%>
            <%#end%>
          <%#*</div>%>
        <%#*</div>%>
      <%#*</div>%>
    <%#end%>

    <%#if @event.person.where(:status_id=>10000).count>0%>
      <%#*<div class="block">%>
        <%#*<a href="#detained" class="block-heading" data-toggle="collapse"><%= pluralize(@fullevent.person.where(:status_id=>10000).count, "Detenido") %></a>%>
        <%#*<div id="detained" class="block-body collapse">%>
          <%#*<div class="control-group">%>
            <%#@event.person.where(:status_id => 10000).each do |person|%>
              <%#*<ul>%>
                <%#*<li><%=person.fullname %></li>%>
              <%#*</ul>%>
            <%#end%>
          <%#*</div>%>
        <%#*</div>%>
      <%#*</div>%>
    <%#end%>

    <%#if @event.person.where(:status_id=>10002).count > 0%>
      <%#*<div class="block">%>
        <%#*<a href="#suspects" class="block-heading" data-toggle="collapse"><%= pluralize(@fullevent.person.where(:status_id=>10002).count, "Sospechoso") %></a>%>
        <%#*<div id="suspects" class="block-body collapse">%>
          <%#*<div class="control-group">%>
            <%#@fullevent.person.where(:status_id => 10002).each do |person|%>
              <%#*<ul class="inline">%>
                <%#*<li><i class="icon-paper-clip"> </i><%=person.fullname %></li>%>
              <%#*</ul>%>
            <%#end%>
          <%#*</div>%>
        <%#*</div>%>
      <%#*</div>%>
    <%#end%>

    <%#if @event.vehicles.count > 0%>
      <%#*<div class="block">%>
        <%#*<a href="#vehicles" class="block-heading" data-toggle="collapse"><%= pluralize(@fullevent.vehicles.count, "Vehiculo")%></a>%>
        <%#*<div id="vehicles" class="block-body collapse">%>
          <%#*<div class="control-group">%>
            <%#@fullevent.vehicles.each do |vehicle|%>
              <%#*<ul>%>
                <%#*<li><%=vehicle.fulldescription %></li>%>
              <%#*</ul>%>
            <%#end%>
          <%#*</div>%>
        <%#*</div>%>
      <%#*</div>%>
    <%#end%>

    <%#if @event.weapons.count > 0%>
      <%#*<div class="block">%>
        <%#*<a href="#weapons" class="block-heading" data-toggle="collapse"><%= pluralize(@fullevent.weapons.count, "Arma")%></a>%>
        <%#*<div id="weapons" class="block-body collapse">%>
          <%#*<div class="control-group">%>
            <%#@fullevent.weapons.each do |weapon|%>
              <%#*<ul>%>
                <%#*<li><%=weapons.fulldescription %></li>%>
              <%#*</ul>%>
            <%#end%>
          <%#*</div>%>
        <%#*</div>%>
      <%#*</div>%>
    <%#end%>

    <%#if @event.drug.count > 0%>
      <%#*<div class="block">%>
        <%#*<a href="#drugs" class="block-heading" data-toggle="collapse"><%= pluralize(@fullevent.drug.count, "Droga")%></a>%>
        <%#*<div id="drugs" class="block-body collapse">%>
          <%#*<div class="control-group">%>
            <%#@fullevent.drug.each do |drugs|%>
              <%#*<ul>%>
                <%#*<li><%drugs.kind %></li>%>
              <%#*</ul>%>
            <%#end%>
          <%#*</div>%>
        <%#*</div>%>
      <%#*</div>%>
    <%#*</div>%>
  <%#*</div>%>
<%#end%>

<%= link_to 'Editar', edit_fullevent_path(@fullevent), :class => "btn btn-primary" %> |
<%= link_to 'Regresar', fullevents_path,:class => "btn btn-danger" %>
